<div class= "container">
  <div class="card-trip">
      <img src="https://cdn.pixabay.com/photo/2020/01/12/16/57/stadium-4760441_960_720.jpg" />
      <div class="card-trip-infos">
          <div>
            <h2><%= @field.name %></h2>
            <ul>
            <li> <%= @field.address %> </li>
            <li> <%= @field.phone_number %> </li>
            </ul>
            <h2>Rese√±as</h2>
            <ul>
            <% @reservations.each do |reservation| %>
              <% reservation.reviews.each do |review| %>
                <li> <%= review.content %> </li>
              <% end %>
            <% end %>
            </ul>
          </div>
        <h2 class="card-trip-pricing">$1500</h2>
      </div>
  </div>
  <div class="botones-centrados">
   <% if policy(Field).create? %>
        <%= link_to 'Editar', edit_field_path(@field.id), class: 'btn btn-primary' %>
    <% end  %>
        <%= link_to 'Volver', fields_path, id: "boton_azul", class: 'btn btn-primary' %>
    </div>
</div>
